{
  // Required
  "app": {
    "background": {
      "scripts": ["background/background.js"]
    }
  },
  "manifest_version": 2,
  "name": "Instant Music",
  "version": "0.1",
  "default_locale": "en",

  // Recommended
  "description": "Instant Music",
  "icons": { "16": "assets/calculator-16.png", "128": "assets/calculator-128.png" },

  // Optional
  "author": "Howon",
  "file_system_provider_capabilities": {
    "configurable": true,
    "multiple_mounts": true,
    "source": "network"
  },
  "offline_enabled": false,
  "permissions": ["webview", "browser", "http://www.youtube.com/*",
    "https://www.youtube.com/*", "https://fonts.googleapis.com/*",
    "storage", "webRequest", "webRequestBlocking", "notifications"
  ],
  "sandbox": {
    "pages": ["sandbox/sandbox.html"]
  },
  "webview": {
    "partitions": [
      {
        "name": "static",
        "accessible_resources": ["sandbox/sandbox.html", "sandbox/sandbox.js", "sandbox/sandbox.css"]
      }
    ]
  },
  "short_name": "Instant Music App",
  "update_url": "http://path/to/updateInfo.xml",
  "version_name": "Beta"
}
